<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MenuFragment"

    android:background="@color/splashbg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:alpha="0.1"
        android:src="@drawable/bg" />

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/anybody_black"
        android:text="@string/btnSignOut"
        android:textColor="@color/custom_darklight"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/btnAccount"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="25dp"
        android:background="@android:color/transparent"
        android:contentDescription="imgbtn"
        android:scaleType="fitCenter"
        android:src="@drawable/img_userdefault" />

    <ImageButton
        android:id="@+id/imgbtnMw"
        android:layout_width="250dp"
        android:layout_height="125dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imgbtnMwii"
        android:layout_margin="5dp"
        android:padding="25dp"
        android:background="@drawable/style_edittext"
        android:contentDescription="imgbtn"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_mw" />

    <ImageButton
        android:id="@+id/imgbtnMwii"
        android:layout_width="250dp"
        android:layout_height="125dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgbtnMw"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="5dp"
        android:padding="25dp"
        android:background="@drawable/style_edittext"
        android:contentDescription="imgbtn"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_mwii" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="250dp"
        android:layout_height="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnMwii"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/custom_tertiary"
        android:fontFamily="@font/anybody_black"
        android:text="@string/btnAbout"
        android:textColor="@color/custom_light"
        android:textSize="20sp" />

</androidx.constraintlayout.widget.ConstraintLayout>